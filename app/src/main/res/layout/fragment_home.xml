<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_generic"
    android:orientation="vertical"
    tools:context=".ActivityHome">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/segoeui_semibold"
        android:textAlignment="center"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonClassify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        android:text="@string/button_classify"
        android:fontFamily="@font/segoeui_semibold"
        android:background="@drawable/button_action"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="100dp"
        android:text="@string/button_stats"
        android:fontFamily="@font/segoeui_semibold"
        android:background="@drawable/button_secondary"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        android:text="@string/button_profile"
        android:fontFamily="@font/segoeui_semibold"
        android:background="@drawable/button_secondary"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/segoeui_semibold"
        android:gravity="center_horizontal"
        android:text="@string/button_logout"
        android:textColor="@color/OLIVE_GREEN"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/buttonAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/segoeui_semibold"
        android:gravity="center_horizontal"
        android:text="@string/button_about"
        android:textColor="@color/OLIVE_GREEN"
        android:textSize="21sp" />

</LinearLayout>